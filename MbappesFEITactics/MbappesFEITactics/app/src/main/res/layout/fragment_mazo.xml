<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vista del mazo (arriba) -->
    <LinearLayout
        android:id="@+id/layoutMazo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <!-- Vista de cada carta del mazo (ejemplo: ImageView) -->
        <ImageView
            android:id="@+id/carta1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/carta2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/carta3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/carta4"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"/>

    </LinearLayout>

    <!-- Vista de las demÃ¡s cartas (abajo) -->
    <ListView
        android:id="@+id/listViewOtrasCartas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutMazo"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
