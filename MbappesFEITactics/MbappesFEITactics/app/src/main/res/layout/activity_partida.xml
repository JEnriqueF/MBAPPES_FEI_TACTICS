                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/lbNoAtaqueEnemigo2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/imagenEscenario2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <TextView
                    android:id="@+id/lbNoAtaquePropio2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/cartaPropia2"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/cartaEnemigo3"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/lbNoAtaqueEnemigo3"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/imagenEscenario3"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <TextView
                    android:id="@+id/lbNoAtaquePropio3"
                    android:layout_width="100dp"
