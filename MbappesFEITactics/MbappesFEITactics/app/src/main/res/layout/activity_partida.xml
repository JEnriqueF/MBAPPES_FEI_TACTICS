<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_fei_blue"
        tools:context=".Vista.Partida">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoEnemigo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user_default"
                android:layout_margin="0dp"/>

            <TextView
                android:id="@+id/text_gamertagEnemigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="enemigo1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="35sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginTop="15dp"
            android:background="@color/fei_blue"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/cartaEnemigo1"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/lbNoAtaqueEnemigo1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/imagenEscenario1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <TextView
                    android:id="@+id/lbNoAtaquePropio1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/cartaPropia1"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
