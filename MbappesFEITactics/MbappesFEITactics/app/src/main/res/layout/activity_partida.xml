<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_fei_blue"
        tools:context=".Vista.Partida">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoEnemigo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user_default"
                android:layout_margin="0dp"/>

            <TextView
                android:id="@+id/text_gamertagEnemigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="enemigo1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="35sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="50dp"
            android:background="@color/fei_blue"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/cartaEnemigo1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/imagenEscenario1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <ImageView
                    android:id="@+id/cartaPropia1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/cartaEnemigo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/imagenEscenario2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <ImageView
                    android:id="@+id/cartaPropia2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/cartaEnemigo3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/imagenEscenario3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="0dp"/>

                <ImageView
                    android:id="@+id/cartaPropia3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deafult_card"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/fotoParaPoner1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/deafult_card"
                android:layout_margin="0dp"/>

            <ImageView
                android:id="@+id/fotoParaPoner2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/deafult_card"
                android:layout_margin="0dp"/>

            <ImageView
                android:id="@+id/fotoParaPoner3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/deafult_card"
                android:layout_margin="0dp"/>

            <ImageView
                android:id="@+id/fotoParaPoner4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/deafult_card"
                android:layout_margin="0dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>